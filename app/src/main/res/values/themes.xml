<resources>
    <style name="Theme.Tanamin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/green_soft</item>
        <item name="colorPrimaryVariant">@color/green_dark_soft</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorSecondaryVariant">@color/green_light_soft</item>
        <item name="colorOnSecondary">@color/grey_soft</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>
    <style name="TextTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextColor">#80757575</item>
        <item name="tabSelectedTextColor">#757575</item>
    </style>
</resources>